@model IEnumerable<WebApplication18.DBContext.JSProfile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Job Seeker's List</h2>

@Html.ActionLink("Export To Excel", "Reports", new { ReportType = "Excel" })
@Html.ActionLink("Export To PDF", "Reports", new { ReportType = "PDF" })
@Html.ActionLink("Export To Word", "Reports", new { ReportType = "Word" })
@Html.ActionLink("Export To Image", "Reports", new { ReportType = "Image" })

@using(Html.BeginForm("Index", "CProfiles", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Search" />
}
   

<table class="table">
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            CellNumber
        </th>
        <th>
            Email
        </th>
        <th>
            Qualifcation
        </th>
        <th>
            Skills
        </th>
        <th>
            CV
        </th>
        <th></th>
    </tr>
    @if(Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                No Match found
            </td>
        </tr>
    }
    else
    {
        foreach (WebApplication18.DBContext.JSProfile item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LaststName
                </td>
                <td>
                    @item.CellNumber
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Qualifcation
                </td>
                <td>
                    @item.Skills
                </td>
                <td>
                    @item.ImagePath
                </td>
            </tr>
        }
    }


</table>
